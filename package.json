{
  "name": "camper",
  "private": true,
  "packageManager": "pnpm@10.30.1",
  "scripts": {
    "dev": "turbo dev",
    "build": "turbo build",
    "lint": "turbo lint",
    "test": "turbo test",
    "typecheck": "turbo typecheck",
    "db:generate": "turbo db:generate --filter=@camper/api",
    "db:migrate": "turbo db:migrate --filter=@camper/api",
    "db:push": "turbo db:push --filter=@camper/api",
    "clean": "turbo clean && rm -rf node_modules"
  },
  "devDependencies": {
    "turbo": "^2.4.4",
    "typescript": "^5.7.3",
    "@types/node": "^22.13.4"
  }
}
